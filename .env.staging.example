# === Staging Environment Variables ===

# Server Configuration
NODE_ENV=development # Or 'staging'
PORT=3000 # Internal container port for the app (host port mapping will differ)

# --- Staging Database Credentials  ---
STAGING_MYSQL_ROOT_PASSWORD="replace_with_strong_staging_root_password"
STAGING_MYSQL_DATABASE="tecket_staging_db"
STAGING_MYSQL_USER="tecket_staging_user"
STAGING_MYSQL_PASSWORD="replace_with_strong_staging_password"

# --- Application Database Connection URL  ---
DATABASE_URL="mysql://${STAGING_MYSQL_USER}:${STAGING_MYSQL_PASSWORD}@db:3306/${STAGING_MYSQL_DATABASE}"

# --- Application Secrets  ---
JWT_SECRET="replace_with_your_staging_jwt_secret_key"
REFRESH_TOKEN_SECRET="replace_with_your_staging_refresh_token_secret_key"

# Stripe Configuration (Test Keys for Staging)
STRIPE_SECRET_KEY="sk_test_replace_with_your_staging_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_replace_with_your_staging_stripe_webhook_secret"

# Email Configuration (Test/Dev SMTP for Staging, e.g., Mailtrap, Ethereal)
SMTP_USER="your_staging_email_user@example.com"
SMTP_PASS="your_staging_email_password"